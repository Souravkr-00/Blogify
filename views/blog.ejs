<!DOCTYPE html>
<html lang="en">
<head>
    <title>Blog</title>
    <%- include("./partials/head.ejs") %>
</head>
<body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container mb-3">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" style="width: 40rem">
        <pre><%= blog.body %></pre>
        <p style="font-weight: 500;">Author: <%= blog.createdBy.fullName %></p>
    </div>

    <div class="container mt-3">
        <h1>Comments</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3"> 
                    <input
                     type="text" 
                     class="form-control"
                    id="comment"
                    name="content"
                    >
                  </div>
                  <button type="submit" class="btn btn-primary">Comment</button>
            </form>
        <% } %>
        <div class="mt-3">
           <% comments.forEach(comment => { %>
                <div>
                    <pre>
                     <%= comment.content %>   
                    </pre>
                </div>
           <% }) %>
        </div>
    </div>
    <%- include("./partials/script.ejs") %>
</body>
</html>